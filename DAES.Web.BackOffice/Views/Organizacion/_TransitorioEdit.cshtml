@model DAES.Model.SistemaIntegrado.Organizacion
@Html.HiddenFor(model => model.OrganizacionId)

@if (Model.Transitorios.Count() != 0)
{
    @Ajax.ActionLink("Agregar Transitorio", "TransitorioAdd", null, new { Model.OrganizacionId }, new AjaxOptions { UpdateTargetId = "transitorio" }, new { @style = "display:none;", @class = "btn btn-success" })
}
else
{

    @Ajax.ActionLink("Agregar Transitorio", "TransitorioAdd", null, new { Model.OrganizacionId }, new AjaxOptions { UpdateTargetId = "transitorio" }, htmlAttributes: new { @class = "btn btn-success" })
}
@if (Model.TipoOrganizacionId == (int)DAES.Infrastructure.Enum.TipoOrganizacion.Cooperativa)
{
    <div class="col-md-12">
        <table class="table table-hover table-striped dataTable">
            <tr>
                @for (var i = 0; i < Model.Transitorios.Count(); i++)
                {
                    @Html.HiddenFor(model => model.OrganizacionId)
                    @Html.HiddenFor(model => model.Transitorios[i].OrganizacionId)
                    @Html.HiddenFor(model => model.Transitorios[i].TransitorioId)

                    <table>
                        <tr>
                            <th>
                                <div class="col-md-10">
                                    @Html.LabelFor(m => Model.Transitorios[i].Objeto, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(m => Model.Transitorios[i].Objeto, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </th>
                        </tr>
                    </table>

                    <br>
                    @Ajax.ActionLink("Eliminar", "TransitorioDelete", null, new { Model.Transitorios.ToArray()[i].TransitorioId, Model.Transitorios.ToArray()[i].OrganizacionId }, new AjaxOptions { UpdateTargetId = "transitorio" }, htmlAttributes: new { @class = "btn btn-danger" })

                }
            </tr>
        </table>
</div>

}
